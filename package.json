{
  "name": "razoch",
  "version": "1.0.0",
  "description": "A React/Redux Playground",
  "main": "build/server/server.min",
  "scripts": {
    "------------------------ LifeCycle Scripts ------------------------": "",
    "prepush": "run-s lint:scss lint:code test:stat",
    "------------------------ Common Scripts ---------------------------": "",
    "clean:all": "rimraf build node_modules && npm install",
    "lint:scss": "stylelint --config configs/stylelint/.rc './source/**/*.scss'",
    "lint:code": "eslint --ignore-path configs/eslint/.ignore --config configs/eslint/.rc --ext .js,.jsx source webpack",
    "test:code": "jest --silent --coverage=false ",
    "test:stat": "jest --silent --coverage=true",
    "test:size": "bundlesize",
    "------------------------ Development Scripts -----------------------": "",
    "build:dev": "cross-env NODE_ENV=development webpack --display-error-details --config configs/webpack/dev.babel.js",
    "start:dev": "cross-env NODE_ENV=development node build/server/server.max",
    "zboot:dev": "run-s clean:all build:dev start:dev",
    "------------------------ Production Scripts ------------------------": "",
    "build:prd": "cross-env NODE_ENV=production webpack --display-error-details --config configs/webpack/prd.babel.js",
    "start:prd": "cross-env NODE_ENV=production node build/server/server.min",
    "zboot:prd": "run-s clean:all build:prd test:size start:prd"
  },
  "engines": {
    "node": "8.9.4",
    "npm": "5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aoch/razoch.git"
  },
  "keywords": [
    "node",
    "express",
    "react",
    "react-dom",
    "redux",
    "redux-thunk",
    "redux-observable",
    "redux-saga",
    "babel",
    "webpack",
    "jest",
    "enzyme"
  ],
  "author": "Andrew Och <aoch@hotmail.co.uk>",
  "contributors": [
    "Asad Razvi <debugme@hotmail.com>"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/aoch/razoch/issues"
  },
  "homepage": "https://github.com/aoch/razoch#readme",
  "dependencies": {
    "express": "4.16.2",
    "prop-types": "15.6.1",
    "ramda": "0.25.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-redux": "5.0.7",
    "redux": "3.7.2",
    "redux-devtools-extension": "2.13.2",
    "redux-immutable-state-invariant": "2.1.0",
    "redux-observable": "0.18.0",
    "redux-saga": "0.16.0",
    "redux-thunk": "2.2.0",
    "rxjs": "5.5.6",
    "spdy": "3.4.7",
    "webpack": "3.10.0",
    "webpack-dev-middleware": "2.0.4",
    "webpack-hot-middleware": "2.21.1",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-loader": "7.1.3",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-ramda": "1.4.3",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.13",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "bundlesize": "0.16.0",
    "compression-webpack-plugin": "^1.1.10",
    "cross-env": "5.1.3",
    "css-loader": "0.28.10",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.18.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "extract-text-webpack-plugin": "3.0.2",
    "html-webpack-plugin": "3.0.4",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "node-sass": "4.7.2",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.6",
    "stylelint": "9.1.1",
    "stylelint-config-recommended": "2.1.0",
    "stylelint-config-standard": "18.2.0",
    "uglifyjs-webpack-plugin": "1.2.2",
    "webpack-node-externals": "1.6.0"
  },
  "bundlesize": [
    {
      "path": "build/client/client.*.js",
      "maxSize": "4 kB"
    },
    {
      "path": "build/client/client.*.css",
      "maxSize": "1 kB"
    },
    {
      "path": "build/client/vendor.*.js",
      "maxSize": "103 kB"
    }
  ],
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/build/testCoverage/",
    "collectCoverageFrom": [
      "source/**/*.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 4,
        "lines": 2,
        "statements": 1
      }
    },
    "setupFiles": [
      "<rootDir>/configs/enzyme/setUp.js"
    ]
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "Safari >= 10",
              "Chrome >= 64",
              "Firefox >= 58",
              "Edge >= 13"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread",
      "syntax-dynamic-import",
      "ramda"
    ],
    "env": {
      "production": {
        "plugins": [
          [
            "transform-react-remove-prop-types",
            {
              "mode": "wrap",
              "ignoreFilenames": [
                "node_modules"
              ]
            }
          ]
        ]
      },
      "development": {
        "plugins": []
      }
    }
  }
}
