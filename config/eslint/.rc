{
  "parser": "babel-eslint",
  "extends": [
    "airbnb/base",
    "plugin:jsx-a11y/strict"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "react",
    "json",
    "jsx-a11y"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".json"
        ]
      }
    }
  },
  "rules": {
    "no-nested-ternary": 0,
    "react/jsx-no-bind": [
      "error",
      {
        "ignoreRefs": false,
        "allowArrowFunctions": true,
        "allowBind": false
      }
    ],
    "react/jsx-uses-react": 2,
    "react/jsx-first-prop-new-line": [
      2,
      "multiline"
    ],
    "react/jsx-uses-vars": 2,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "config/**/*.js",
          "source/**/*.test.js"
        ]
      }
    ],
    "object-curly-newline": 0,
    "arrow-parens": [
      "error",
      "always"
    ],
    "import/no-named-as-default": 0,
    "semi": [
      "error",
      "never"
    ],
    "comma-dangle": 0,
    "id-length": [
      2
    ]
  }
}
